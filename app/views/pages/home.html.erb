<div class="banner">
  <h1 class="text-center">Unlock Your Projects Potential with Top Freelancers</h1>
  <div class="row justify-content-center">
    <div class="col-sm-8 col-lg-6 my-3">
      <%= form_with url: services_path, method: :get, class: "search-bar d-flex" do %>
        <%= text_field_tag :search,
              params[:search],
              class: "form-control search-bar",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn-search btn-alternative" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container categories">
  <div class="row">
    <div class="col col-category">
      <a href="/services?search=content-writing">
        <div class="category-card">
          <i class="fa-solid fa-file-lines"></i>
          <p>Content-writing</p>
        </div>
      </a>
    </div>
    <div class="col col-category">
      <a href="/services?search=front-end">
        <div class="category-card">
          <i class="fa-solid fa-code"></i>
          <p>Front-end</p>
        </div>
      </a>
    </div>
    <div class="col col-category">
      <a href="/services?search=web-design">
        <div class="category-card">
          <i class="fa-solid fa-palette"></i>
          <p>Web-design</p>
        </div>
      </a>
    </div>
    <div class="col col-category">
      <a href="/services?search=setup">
        <div class="category-card">
          <i class="fa-solid fa-gear"></i>
          <p>Setup</p>
        </div>
      </a>
    </div>
    <div class="col col-category">
      <a href="/services?search=debugging">
        <div class="category-card">
          <i class="fa-solid fa-bug"></i>
          <p>Debugging</p>
        </div>
      </a>
    </div>
    <div class="col col-category">
      <a href="/services?search=video-making">
        <div class="category-card">
          <i class="fa-brands fa-youtube"></i>
          <p>Video-making</p>
        </div>
      </a>
    </div>
</div>

<div class="container mt-5">
  <h2>Here some services</h2>
  <div class="row">
      <% @services.each do |service| %>
        <div class="col m-2 d-flex">
          <div class="service-card h-100" style="width: 18rem;">
          <% if service.images.first %>
            <%= cl_image_tag service.images.first.key %>
          <% else %>
            <%= image_tag("image_default.jpg") %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= service.title %></h5>
            <%= link_to "Details", service_path(service), class: "btn-main mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
