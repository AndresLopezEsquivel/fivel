<div class="container">
  <h1 class="text-center my-5">My Pending Sales</h1>
  <% if @pending_sales.present? %>
    <table class="table table-striped table-dark custom-table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Title</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @pending_sales.each_with_index do |sale, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= sale.service.title %></td>
            <td><%= sale.status %></td>
            <td>
              <div class="btn-group" role="group" aria-label="Actions">
                <%= button_to update_status_path(sale, status: 'accepted'), method: :patch, class: 'btn button-custom accept' do %>
                  <i class="fas fa-check"></i>
                <% end %>

                <%= button_to update_status_path(sale, status: 'cancelled'), method: :patch, class: 'btn button-custom decline' do %>
                  <i class="fas fa-times"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="container">
      <h2 class="text-center mt-5 text-muted">No pending sales :(</h2>
    </div>
  <% end %>
</div>

<%= console %>
