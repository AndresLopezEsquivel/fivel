<div class="container">
  <h1 class="text-center my-5">My Pending Sales</h1>
  <table class="table table-striped table-dark custom-table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Title</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @pending_sales.each_with_index do |sale, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= sale.service.title %></td>
          <td><%= sale.status %></td>
          <td>
            <%= link_to "Accept", update_status_path(sale, status: 'accepted'), method: :patch, class: 'btn btn-success' %>
            <%= link_to "Decline", update_status_path(sale, status: 'cancelled'), method: :patch, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
