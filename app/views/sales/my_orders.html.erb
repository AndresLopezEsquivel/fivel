<div class="container">
  <h1 class="text-center my-5">My Orders</h1>
  <table class="table table-striped table-dark orders-table custom-table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Title</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @my_orders.each_with_index do |order, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= order.service.title %></td>
          <td><%= order.status %></td>
          <td><%= link_to "Details", sale_path(order.id), class: 'btn btn-details' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
