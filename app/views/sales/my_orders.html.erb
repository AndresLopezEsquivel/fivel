<div class="container my-5" data-controller="order-filter">
  <h1 class="display-4">My Orders</h1>
  <div class="row">
    <div class="col-12">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="orderFilter" value="All" checked data-action="click->order-filter#filter">
        <label class="form-check-label">All</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="orderFilter" value="Pending" data-action="click->order-filter#filter">
        <label class="form-check-label">Pending</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="orderFilter" value="In progress" data-action="click->order-filter#filter">
        <label class="form-check-label">In Progress</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="orderFilter" value="Cancelled" data-action="click->order-filter#filter">
        <label class="form-check-label">Cancelled</label>
      </div>
    </div>
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <% @my_orders.each do |order| %>
      <div class="col-md-4 order-card" data-status="<%= order.status %>" data-order-filter-target="order">
        <div class="card mb-4 border border-success">
          <div class="card-body">
            <h5 class="card-title"><%= order.service.title %></h5>
            <p class="card-text"><strong>Status:</strong> <%= order.status %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
