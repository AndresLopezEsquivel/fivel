<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(https://wallpapers.com/images/hd/profile-picture-background-xyyvpmbyouhknwrk.jpg)"></div>
<div class="mx-5 mt-n5">
  <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-profile border border-light border-3", alt: "user-avatar" %>
</div>

<div class="container">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active btn btn-light" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Profile</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link btn btn-light" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Services</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link btn btn-light" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Sales</button>
    </li>
  </ul>
  <div class="tab-content pt-3" id="myTabContent">
    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
      <h4>Languages</h4>
      <% @user_languages.each do |language| %>
        <div class="d-flex">
          <p><%= language.language %></p>
          <p class="fst-italic fw-light text-white"> - <%= language.level %></p>
        </div>
      <% end %>
      <h4 class="pt-3">Skills</h4>
      <% @user_skills.each do |skill| %>
        <div class="d-flex">
          <p><%= skill.skill %></p>
          <p class="fst-italic fw-light text-white"> - <%= skill.level %></p>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">Hola</div>
    <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">...</div>
  </div>
</div>
