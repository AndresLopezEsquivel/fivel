<div class="container mt-5">
  <h1>Here all our Services</h1>
  <p>You can consult them in the below list</p>
</div>

<div class="container mt-2">
  <div class="d-grid" style="grid-template-columns: 1fr 1fr 1fr;">
      <% @services.each do |service| %>
        <div class="col m-2">
          <div class="service-card h-100" style="width: 18rem;">
          <% if service.images.first %>
            <%= cl_image_tag service.images.first.key %>
          <% else %>
            <%= image_tag("image_default.jpg") %>
          <% end %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= service.title %></h5>
              <%= link_to "Details", service_path(service), class: "btn-main mt-auto" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
