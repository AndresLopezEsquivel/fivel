<div class="container">
  <div class="container mt-5">
    <h1><%= @service.title %></h1>
  </div>
  <div class="container d-flex mt-5">
    <div class="main-image">
    <% if @service.images.attached? %>
      <%= cl_image_tag @service.images.first.key %>
    </div>
    <div class="container other-images">
      <div class="row">
      <% @service.images.drop(1).each do |image| %>
      <div class="col other-image">
        <%= cl_image_tag image.key %>
      </div>
      <% end %>
    </div>
  </div>
   <% end %>
</div>

<div class="container description mt-5">
  <h2>Description</h2>
  <p><%= @service.description %></p>
</div>

<div class="container d-flex justify-content-between align-items-center purchase-bar">
  <div class="price">
    <p>Price: <%= @service.price %></p>
  </div>
  <div class="buy-button">
    <% if user_signed_in? %>
      <%= button_to "Buy", service_sales_path(@service), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
