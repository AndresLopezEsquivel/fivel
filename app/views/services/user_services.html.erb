<div class="container my-4 pt-5">
  <div class="container d-flex justify-content-between mb-5">
    <h1>Here all your services</h1>
    <button class="btn-alternative"><%= link_to "Create a new service", new_service_path %></button>
  </div>
  <table class="table table-striped table-dark custom-table">
    <thead>
      <tr>
        <th scope="col"style="width: 10%"></th>
        <th scope="col" style="width: 20%">Title</th>
        <th scope="col" style="width: 50%">Description</th>
        <th scope="col" style="width: 20%">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user_services.each_with_index do |service, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= link_to service.title, service_path(service) %></td>
          <td><%= service.description %></td>
          <td>
          <div class="d-flex justify-content-center">
          <button class="btn-edit"><%= link_to "Edit", edit_service_path(service)%></button>
          <button class="btn-delete"><%= link_to "Delete", service_path(service), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
          </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
